<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning"><strong><%= @customer.last_name%><%= @customer.first_name%></strong>
      さんの<strong>会員情報編集</strong>
    </h3>
  </div>

  <%= form_with model: @customer, url:admin_customer_path(@customer), method: :patch do |f|%>
    <div class ="row mt-5">
      <div class ="col-sm-10">
        <div class ="form-group row">
          <%= f.label :customer_id, "会員ID", class: "col-sm-2 mr-5" %>
          <%= @customer.id %>
        </div>
        <div class ="form-group row">
          <%= f.label :"氏名", class: "col-sm-2 mr-4"%>
          <%= f.text_field :last_name, class: "form-control col-sm-3" %>
          <%= f.text_field :first_name, class: "form-control offset-sm-1 col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"フリガナ", class: "col-sm-2 mr-4"%>
          <%= f.text_field :last_name_kana, class: "form-control col-sm-3" %>
          <%= f.text_field :first_name_kana, class: "form-control offset-sm-1 col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"郵便番号", class: "col-sm-2 mr-4" %>
          <%= f.text_field :postal_code, class: "form-control col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"住所",class: "col-sm-2 mr-4" %>
          <%= f.text_field :address, class: "form-control col-sm-7" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"電話番号", class: "col-sm-2 mr-4"%>
          <%= f.text_field :telephone_number, class: "form-control col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"メールアドレス", class:"col-sm-2 mr-4" %>
          <%= f.text_field :email, class: "form-control col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"会員ステータス", class: "col-sm-2 mr-4" %>
          <label><%= f.radio_button :is_active, :true, checked: true, class: "ml-4" %>有効</label>
          <label><%= f.radio_button :is_active, :falsu, class: "ml-5" %>退会</label>
        </div>
      </div>
    </div>
    <div class ="row">
      <div class ="offset-sm-4 col-sm-4 mt-5">
        <div class ="action">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


