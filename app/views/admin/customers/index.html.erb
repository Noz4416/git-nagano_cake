<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning font-weight-bold">会員一覧</h3>
  </div>

  <div class ="row mt-5">
    <div class ="offset-sm-1 col-sm-10">
      <table class ="table text-center">
        <thead>
          <tr class ="table-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.active_text %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class ="row">
    <div class ="offset-sm-4 col-sm-4 py-2 mt-5">
      <%= paginate @customers %>
    </div>
  </div>
</div>
