<div class ="container my-5">
  <div class ="row ml-5">
    <h2><strong><%= @customer.first_name %><%= @customer.last_name %></strong>
      さんの<strong>会員詳細</strong>
    </h2>
  </div>

  <div class ="row mt-5">
    <div class ="col-sm-10 ml-5">
      <table class ="table table-hover text-center">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.active_text %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class ="row">
    <div class ="offset-sm-4 col-sm-4 mt-5">
      <div class ="action">
        <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
      </div>
      <div class ="action">
        <%= link_to "注文履歴一覧を見る", admin_customer_orders_path, class: "btn btn-primary ml-5"%>
      </div>
    </div>
  </div>
</div>
