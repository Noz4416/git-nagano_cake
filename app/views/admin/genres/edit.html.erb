<div class ="container my-5">
  <div class ="row ml-5">
    <h2>ジャンル編集</h2>
  </div>

  <%= form_with model: @genre, url: admin_genre_path do |f|%>
    <div class ="row mt-5">
      <div class ="col-sm-8">
        <div class ="form-group row">
          <%= f.label "ジャンル名", class: "col-sm-2" %>
          <%= f.text_field :name, class: "form-control col-sm-5" %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

