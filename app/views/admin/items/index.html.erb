<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning font-weight-bold">商品一覧</h3>
  </div>

  <div class ="row">
    <%= link_to "+", new_admin_item_path, class: 'btn btn-lg rounded-circle ml-auto shadow-sm'%>
  </div>

  <div class ="row mt-4">
    <table class ="table text-center">
      <thead class ="table-secondary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item|%>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.status_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class ="row">
    <div class ="col-sm-4 offset-sm-4 py-2 mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>