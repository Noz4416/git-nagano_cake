<div class ="container my-5">
  <div class ="row">
    <h2>商品詳細</h2>
  </div>

  <div class ="row mt-3">
    <div class ="offset-sm-1 col-sm-3">
      <%= image_tag @item.get_image(200,200)%>
    </div>

    <div class ="col-sm-5">
      <table class ="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.tax_in_price %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.status_text %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class ="row mt-5">
    <div class ="offset-sm-4 col-sm-4">
      <%= link_to "編集する",edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>
