<h1>商品詳細</h1>

    <div class ="form">
      <%= image_tag @item.image %>
    </div>

    <table>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre_id %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= (@item.price*1.1).floor %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.status_text %></td>
        </tr>
      </tbody>
    </table>

    <div class ="action">
      <%= link_to "編集する",edit_admin_item_path(@item) %>
    </div>