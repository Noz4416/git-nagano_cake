<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning font-weight-bold">注文履歴一覧</h3>
  </div>

  <div class ="row mt-5">
    <table class ="table table-hover text-center">
      <thead>
        <tr class ="table-secondary">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order|%>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.first_name %>
                <%= order.customer.last_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class ="row">
    <div class ="offset-sm-4 col-sm-4 mt-5 py-2">
      <%= paginate @orders %>
    </div>
  </div>
</div>