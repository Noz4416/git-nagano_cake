<h1>注文履歴詳細</h1>


<table>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= link_to admin_customer_path(order.customer) %>
        <%= @order.customer.first_name %><%= @order.cutomer.last_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order. l user.created_at, format: :short %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.postal_code %> <%= @order.address %></br>
          <%= @order.name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <%= form_with model: @order do |f| %>
      <td><%= f.colection_select, :status, @order, :id, :status %>
          <%= f.submit "更新" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th colspan ="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.item.price*1.1).floor %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.colection_select, :making_status, @oder_detail, :id, :making_status %></td>
        <td><%= order_detail.submit "更新" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
