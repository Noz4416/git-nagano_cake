<div class ="container my-5">
  <div class ="row ml-5">
    <h2>注文履歴詳細</h2>
  </div>

  <div class ="row mt-5">
    <div class ="col-sm-10">
      <table class ="table table-borderless">
        <tbody>
          <tr>
            <td>購入者</td>
            <td><%= link_to admin_customer_path(order.customer) %>
              <%= @order.customer.first_name %><%= @order.cutomer.last_name %></td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order. l user.created_at, format: :short %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %><%= @order.address %></br>
                <%= @order.first_name %><%= @order.last_name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <%= form_with model: @order do |f| %>
            <td><%= f.colection_select, :status, @order, :id, :status %>
                <%= f.submit "更新", class: "btn btn-success ml-3" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class ="row mt-5">
    <div class ="col-sm-8">
      <table class ="table table-hover text-center">
        <thead>
          <tr class ="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan ="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price*1.1).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.colection_select, :making_status, @oder_detail, :id, :making_status %></td>
              <td><%= order_detail.submit "更新", class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class ="col-sm-4">
      <table class ="table table-borderless">
        <tbody>
          <tr>
            <strong><td>商品合計</td></strong>
            <td><%= @total_price%>円</td>
          </tr>
          <tr>
            <strong><td>送料</td></strong>
            <td><%= @order.shipping_cost %>円</td>
          </tr>
          <tr>
            <strong><td>請求金額合計</td></strong>
            <strong><td><%= (@order.shipping_cost + @total_price)%>円</td></strong>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
