<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning font-weight-bold">配送先編集</h3>
  </div>
  <div class ="row mt-5">
    <div class ="col-sm-10">
      <%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
        <div class ="form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class:"col-sm-3" %>
          <%= f.text_field :postal_code, class:"col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"住所", class:"col-sm-3" %>
          <%= f.text_field :address, class:"col-sm-6" %>
        </div>
        <div class ="form-group row mb-5">
          <%= f.label :"宛名", class:"col-sm-3" %>
          <%= f.text_field :name, class:"col-sm-3" %>
          <%= f.submit "変更内容を保存", class:"btn btn-success offset-sm-3 col-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>