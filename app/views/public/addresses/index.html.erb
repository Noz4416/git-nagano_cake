<h3>配送先登録/一覧</h3>


<%= form_with model: @address, url: public_addresses_path, method: :post do |f|%>
<div>
  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
</div>

<div>
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
</div>

<div>
  <%= f.label :"宛名" %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.submit "新規登録" %>
</div>
<% end %>

<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan ="3"></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <th><%= address.postal_code %></th>
    <th><%= address.address %></th>
    <th><%= address.name %></th>
    <th>
      <%= link_to "編集する", edit_public_address_path(address) %>
      <%= link_to "削除する", public_address_path(address), method: :delete%>
    </th>
  </tr>
  <% end %>
</table>