<div class ="container my-5">
  <div class ="row ml-5">
    <h3 class ="bg-warning font-weight-bold">配送先登録/一覧</h3>
  </div>

  <div class ="row mt-5">
    <div class ="col-sm-10">
      <%= form_with model: @address, url: public_addresses_path, method: :post do |f|%>
        <div class ="form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class:"col-sm-3" %>
          <%= f.text_field :postal_code, class:"col-sm-3" %>
        </div>
        <div class ="form-group row">
          <%= f.label :"住所", class:"col-sm-3" %>
          <%= f.text_field :address, class:"col-sm-6" %>
        </div>

        <div class ="form-group row mb-5">
          <%= f.label :"宛名", class:"col-sm-3" %>
          <%= f.text_field :name, class:"col-sm-3" %>
          <%= f.submit "新規登録", class:"btn btn-success offset-sm-3 col-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class ="row mt-5">
    <div class ="col-sm-9">
      <table class ="table table-bordered">
        <tr class ="bg-secondary text-white">
          <th class ="col-sm-1">郵便番号</th>
          <th class ="col-sm-5">住所</th>
          <th class ="col-sm-2 ml-5">宛名</th>
          <th colspan ="1"></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <th><%= address.postal_code %></th>
          <th><%= address.address %></th>
          <th><%= address.name %></th>
          <th>
            <%= link_to "編集する", edit_public_address_path(address), class:"btn btn-success ml-2" %>
            <%= link_to "削除する", public_address_path(address), method: :delete, class:"btn btn-danger ml-3"%>
          </th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>