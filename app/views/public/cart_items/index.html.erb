<h3>ショッピングカート</h3>

<div><%= link_to "カートを空にする" %></div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan ="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.tax_in_price %></td>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch do |f|%>
          <td>
            <%= f.number_field :amount, min:1 %>
            <%= f.submit "変更する" %>
          </td>
        <% end %>
        <td><%= cart_item.sum_of_price %></td>
        <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <td>合計金額</td>
    <td><%= @total.round.to_s(:delimited) %></td>
  </tr>
</table>


<div>
  <%= link_to "買い物を続ける", public_items_path %>
</div>

<div>
  <%= link_to "情報入力に進む" %>
</div>
