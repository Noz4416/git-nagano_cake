<div class ="container my-5">
  <div class ="row ml-3">
    <div class ="offset-sm-1">
      <h3 class ="bg-warning">会員情報編集</h3>
    </div>
  </div>


  <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
      <div class ="row mt-5 ml-5">
        <div class ="col-sm-10">

          <div class ="form-group row">
            <%= f.label :"氏名", class:"col-sm-2"%>
            <%= f.text_field :last_name, autofocus: true, class: "form-control offset-sm-1 col-sm-4" %>
            <%= f.text_field :first_name, class: "form-control offset-sm-1 col-sm-4" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"フリガナ", class:"col-sm-2"%>
            <%= f.text_field :last_name_kana, class: "form-control offset-sm-1 col-sm-4" %>
            <%= f.text_field :first_name_kana, class: "form-control offset-sm-1 col-sm-4" %>
          </div>

          <div class="form-group row">
            <%= f.label :"メールアドレス", class:"col-sm-2" %>
            <%= f.email_field :email,　autocomplete: "email", class: "form-control offset-sm-1 col-sm-4" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"郵便番号", class:"col-sm-3" %>
            <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"住所", class:"col-sm-2" %>
            <%= f.text_field :address, class: "form-control offset-sm-1 col-sm-8" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"電話番号", class:"col-sm-3" %>
            <%= f.text_field :telephone_number, class: "form-control col-sm-4" %>
          </div>

          <div class ="row actions">
            <%= f.submit "編集内容を保存", class:"btn btn-success offset-sm-3 col-sm-3 my-4" %>
            <%= link_to "退会する", public_customers_unsubscribe_path(@customer), class: "btn btn-danger offset-sm-2 col-sm-3 my-4" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
