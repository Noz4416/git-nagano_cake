<div class ="container my-5">
  <div class ="row offset-sm-1">
    <h3 class ="bg-warning">マイページ</h3>
  </div>
    <div class ="row mt-5">
      <h4 class ="font-weight-bold ml-4 mr-5">登録情報</h4>
      <%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-success text-white ml-5" %>
    </div>

    <table class ="table table-bordered col-sm-8">
      <tr>
        <td class ="col-sm-2">氏名</td>
        <td class ="col-sm-6">
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
      　<td><%= @customer.email %></td>
      </tr>
    </table>

    <table class ="table table-borderless col-sm-4">
      <tr>
        <td><h4 class ="font-weight-bold">配送先</h4></td>
        <td><%= link_to "一覧を見る", public_addresses_path, class:"btn btn-primary text-white" %></td>
      </tr>
      <tr>
        <td><h4 class ="font-weight-bold">注文履歴</h4></td>
        <td><%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary text-white" %></td>
      </tr>
    </table>

