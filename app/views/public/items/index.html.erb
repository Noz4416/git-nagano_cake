<div>
  <h3>商品一覧</h3>
  <span>(全<%= @items.count %>件）</span>
</div>

  <div class ="row list-wrap mx-auto mt-3">
    <% @items.last(4).each do |item|%>
      <div class ="list-box mx-auto">
        <%= link_to public_item_path(item) do %>
          <%= image_tag item.image, :size => '150x150' %>
        <% end %>
        <div class ="row mt-3" %>
          <span><%= item.name %></span>
        </div>
        <div class ="row mt-1" %>
          <span><%= item.tax_in_price %>円</span>
        </div>
      </div>
    <% end %>
  </div>