<div class ="container my-5">
  <div class ="row ml-3">
    <h3>商品一覧</h3>
    <span>(全<%= @items.count %>件）</span>
  </div>

  <div class ="row d-flex flex-wrap mx-5 my-5">
    <% @items.each do |item|%>
      <div class ="mx-5 my-4">
        <%= link_to public_item_path(item) do %>
          <%= image_tag item.get_image(200,200) %>
        <% end %>
        <div class ="row mt-3" %>
          <span><%= item.name %></span>
        </div>
        <div class ="row mt-1" %>
          <span><%= item.tax_in_price %>円</span>
        </div>
      </div>
    <% end %>
  </div>

  <div class ="row">
    <div class ="col-sm-4 offset-sm-4 py-2 mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>