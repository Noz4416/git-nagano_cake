<div class ="container my-5">
  <div class ="row mt-5">
    <div class ="offset-sm-2 col-sm-4">
      <%= image_tag @item.image, :size => '250x250'%>
    </div>

    <div class ="col-sm-6">
      <div class ="mt-1">
        <h3 class ="font-weight-bold"><%= @item.name %></h3>
      </div>
      <div class ="mt-3">
        <%= @item.introduction %>
      </div>
      <div class ="mt-5">
        <h4 class ="font-weight-bold">¥<%= @item.tax_in_price %>(税込)</strong>
      </div>
    </div>
  </div>
</div>