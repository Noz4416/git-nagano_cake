<div class ="container my-5">
  
  
  <div class ="row mt-5">
    <div class ="offset-sm-2 col-sm-4">
      <%= image_tag @item.get_image(250,250)%>
    </div>

    <div class ="col-sm-6">
      <div class ="mt-1">
        <h3 class ="font-weight-bold"><%= @item.name %></h3>
      </div>
      <div class ="mt-3">
        <%= @item.introduction %>
      </div>
      <div class ="mt-5">
        <h4 class ="font-weight-bold">¥<%= @item.tax_in_price %>(税込)</strong>
      </div>
      <div class ="form-group row mt-5">
        <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f|%>
          <%= f.number_field :amount, min:1, placeholder:"個数選択", class: "form-control-sm" %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.submit "カートに入れる", class: "btn btn-success ml-3"%>
        <% end %>
      </div>
    </div>
  </div>
</div>