<h3>注文情報確認</h3>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.tax_in_price.round.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.sum_of_price.round.to_s(:delimited) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<table>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @total.round.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>請求額</td>
    <td><%= @total_payment.round.to_s(:delimited) %></td>
  </tr>
</table>

<div>
  <span>支払方法</span>
  <%= @order.payment_method_i18n %>
</div>
<div>
  <span>お届け先</span>
  <%= @order.postal_code %>
  <%= @order.address %></br>
  <%= @order.name %>
</div>

<div>
  <%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
    <%= f.hidden_field :order_id %>
    <%= f.hidden_field :payment_method %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.submit "注文を確定する" %>
  <% end %>
</div>