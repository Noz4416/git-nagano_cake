<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
      <tr>
        <td><%= order. l customer.created_at, format: :short %></td>
        <td><%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %></td>
        <td><%= order.order_detail.item %></td>
        <td><%= order.total_payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", public_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>