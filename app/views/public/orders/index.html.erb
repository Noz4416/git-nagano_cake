<div class ="container my-5">
  <div cllass ="row ml-5">
    <h3 class ="bg-warning font-weight^bold">注文履歴一覧</h3>
  </div>
  <div class ="row mt-5">
    <div class ="col-sm-12">
<table class ="table table-bordered">
  <thead class ="bg-secondary text-white font-weight-bold">
    <tr>
      <th class ="col-sm-1">注文日</th>
      <th class ="col-sm-4">配送先</th>
      <th class ="col-sm-2">注文商品</th>
      <th class ="col-sm-1">支払金額</th>
      <th class ="col-sm-1">ステータス</th>
      <th class ="col-sm-1">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
      <tr>
        <td><%= l order.created_at, format: :short %></td>
        <td>
          <%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
          <% end %>
        </td>
        <td><%= order.total_payment.to_s(:delimited) %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", public_order_path(order), class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>