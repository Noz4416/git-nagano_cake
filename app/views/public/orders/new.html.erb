<h3>注文情報入力</h3>


<%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
<div>
  <span>支払い方法</span></br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= Order.payment_methods_i18n[:credit_card]%></br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= Order.payment_methods_i18n[:transfer] %>
</div>
<div>
  <span>お届け先</span>
  <div>
    <%= f.radio_button :address_number, 1 %>
    <%= f.label :address, "ご自身の住所" %></br>
    <%= current_customer.customer_address %></br>
    <%= current_customer.customer_name %>
  </div>
  <div>
    <%= f.radio_button :address_number, 2 %>
    <%= f.label :address, "登録先住所から選択" %></br>
    <%= f.collection_select :address, current_customer.addresses.all, :id, :address_code %>
  </div>
  <div>
    <%= f.radio_button :address_number, 3 %>
    <%= f.label :address, "新しいお届け先" %></br>
    <%= f.label :"郵便番号(ハイフン無し)" %>
    <%= f.text_field :postal_code %></br>
    <%= f.label :"住所" %>
    <%= f.text_field :address %></br>
    <%= f.label :"宛名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "確認画面に進む" %>
  </div>
</div>
<% end %>
