<h3>注文履歴詳細</h3>

<div>
  <h4>注文情報</h4>
  <table>
    <tr>
      <td>注文日</td>
      <td><%= @order. l order.customer.created_at, format: :short %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        <%= @order.postal_code %></br>
        <%= @order.address %></br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.status %></td>
    </tr>
  </table>
</div>

<div>
  <h4>請求金額</h4>
  <table>
    <tr>
      <td>商品合計</td>
      <td><%= @total.round.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @total_payment.round.to_s(:delimited) %></td>
    </tr>
  </table>
</div>

<div>
  <h4>注文内容</h4>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.tax_in_price.round.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.sum_of_price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>