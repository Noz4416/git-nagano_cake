<div class ="container my-5">
  <div class ="row">
    <h3 class ="bg-warning font-weight-bold ml-5">注文履歴詳細</h3>
  </div>

  <div class ="row mt-5">
    <div class ="col-sm-3">
      <h4 class ="font-weight-bold">注文情報</h4>
    </div>
    <div class ="offset-sm-5 col-sm-3">
      <h4 class ="font-weight-bold">請求金額</h4>
    </div>
  </div>

  <div class ="row mt-2">
    <div class ="col-sm-7">
      <table class ="table table-bordered font-weight-bold">
        <tr>
          <td class ="bg-secondary text-white col-sm-3">注文日</td>
          <td><%= l @order.created_at, format: :short %></td>
        </tr>
        <tr>
          <td class ="bg-secondary text-white col-sm-3">配送先</td>
          <td>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class ="bg-secondary text-white col-sm-3">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td class ="bg-secondary text-white col-sm-3">ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class ="offset-sm-1 col-sm-4">
      <table class ="table table-bordered font-weight-bold">
        <tr>
          <td class ="bg-secondary text-white col-sm-6">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class ="bg-secondary text-white col-sm-6">配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td class ="bg-secondary text-white col-sm-6">ご請求額</td>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class ="row mt-5 ml-1">
    <h4 class ="font-weight-bold">注文内容</h4>
  </div>
  <div class ="row mt-2">
    <div class ="col-sm-9">
      <table class ="table table-bordered font-weight-bold mb-5">
        <thead class ="bg-secondary text-white">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.tax_in_price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.sum_of_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>