<div class ="container my-5">
  <div class ="row ml-3">
    <div class ="offset-sm-1">
      <h3 class ="bg-warning">ログイン</h3>
    </div>
  </div>

  <div class ="row mt-4 ml-5">
    <div class ="offset-sm-1">
      <h4 class ="bg-warning">会員の方はこちらからログイン</h4>
    </div>
  </div>

  <%= form_with model: @customer, url: new_customer_session_path do |f| %>

    <div class ="row mt-5">
      <div class ="offset-sm-2 col-sm-10">
        <div class="form-group row">
          <%= f.label :"メールアドレス", class:"col-sm-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-6 ml-5" %>
        </div>

        <div class="form-group row">
          <%= f.label :"パスワード", class:"col-sm-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-6 ml-5" %>
        </div>

        <div class="actions row mt-5">
          <%= f.submit "ログイン", class: "btn btn-primary text-white offset-sm-3 col-sm-3" %>
        </div>
      </div>
    </div>
  <% end %>

   <div class ="row mt-5 ml-5">
      <div class ="offset-sm-1">
        <h4 class ="bg-warning">会員登録がお済みでない方</h4>
      </div>
    </div>

    <div class ="row my-4">
      <div class ="offset-2">
        <h5><%= render "public/shared/links" %>から新規登録を行ってください。</h5>
      </div>
    </div>
</div>
